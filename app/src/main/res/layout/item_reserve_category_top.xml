<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_reserve_category_top_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tv_reserve_category_top_basket"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:src="@drawable/ic_reserve_basket"
        app:layout_constraintEnd_toEndOf="@id/iv_reserve_category_top_image"
        app:layout_constraintTop_toBottomOf="@id/iv_reserve_category_top_image" />

    <TextView
        android:id="@+id/tv_reserve_category_top_label"
        android:layout_width="47dp"
        android:layout_height="20dp"
        android:layout_marginTop="5.5dp"
        android:background="@drawable/shape_blue01_fill_9_rect"
        android:gravity="center"
        android:text="@string/reserve_tab_pick_up"
        android:textAppearance="@style/Typography.GsHomeTown.Detail.Medium"
        android:textColor="@color/grey_10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_reserve_category_top_basket"
        app:layout_constraintStart_toStartOf="@id/iv_reserve_category_top_image"
        app:layout_constraintTop_toTopOf="@id/tv_reserve_category_top_basket" />

    <TextView
        android:id="@+id/tv_reserve_category_top_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Typography.GsHomeTown.Body3.Medium3"
        android:textColor="@color/grey_09"
        app:layout_constraintStart_toStartOf="@id/iv_reserve_category_top_image"
        app:layout_constraintTop_toBottomOf="@id/tv_reserve_category_top_basket"
        tools:text="NEW이거닭강정(오리지널)" />

    <TextView
        android:id="@+id/tv_reserve_category_top_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="102dp"
        android:textAppearance="@style/Typography.GsHomeTown.Body2"
        android:textColor="@color/grey_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_reserve_category_top_image"
        app:layout_constraintTop_toBottomOf="@id/tv_reserve_category_top_menu_title"
        tools:text="9,000원" />

</androidx.constraintlayout.widget.ConstraintLayout>