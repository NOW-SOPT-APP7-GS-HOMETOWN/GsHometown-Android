<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_main_month_event_img"
        android:layout_width="84dp"
        android:layout_marginTop="2dp"
        android:layout_height="80dp"
        app:shapeAppearanceOverlay="@style/HomeImageRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="@id/iv_main_month_event_img"
        app:layout_constraintStart_toStartOf="@id/iv_main_month_event_img"
        app:layout_constraintTop_toBottomOf="@id/iv_main_month_event_img" />
</androidx.constraintlayout.widget.ConstraintLayout>