<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. dark 모드 제거 -->
    <style name="Base.Theme.GSHometownAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- primary color-->
        <item name="colorPrimary">@color/grey_11</item>
        <!-- font padding 제거-->
        <item name="android:includeFontPadding">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 기본 배경색 -->
        <item name="android:windowBackground">@color/grey_00</item>
        <!-- 기본 텍스트 색 -->
        <item name="android:textColor">@color/grey_10</item>

    </style>

    <style name="Theme.GSHometownAndroid" parent="Base.Theme.GSHometownAndroid" />

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="HomeImageRadius">
        <item name="cornerSize">14dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius9" parent="">
        <item name="cornerSize">9dp</item>
    </style>
</resources>
